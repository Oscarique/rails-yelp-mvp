<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %>
<p><%= @restaurant.category %>
<p><strong>Reviews</strong></p>
  <ul class="list-group list-group-flush">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content%></li>
      <li class="list-group-item"><%= review.rating%></li>
    <% end %>
  </ul>
<br>
<%= link_to "New review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "Delete", restaurant_path(@restaurant), class: "btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to "Back", restaurants_path, class: "btn btn-primary"%>
